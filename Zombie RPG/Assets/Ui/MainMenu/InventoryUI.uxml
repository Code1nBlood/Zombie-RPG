            <ui:Label text="Бусты" style="unity-text-align: middle-center; margin-bottom: 5px;" />
            <ui:ListView name="BoostList" style="flex-grow: 1; background-color: rgb(70, 70, 70);" />
        </ui:VisualElement>
        <ui:VisualElement style="flex-direction: column; flex-grow: 1;">
            <ui:Label text="Зелья" style="unity-text-align: middle-center; margin-bottom: 5px;" />
            <ui:ListView name="PotionList" style="flex-grow: 1; background-color: rgb(70, 70, 70); -unity-text-align: upper-left;" />
        </ui:VisualElement>
    </ui:VisualElement>
