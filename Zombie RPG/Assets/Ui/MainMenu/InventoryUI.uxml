        </ui:VisualElement>
    </ui:VisualElement>
    <ui:VisualElement name="InventoryAllItems" style="flex-direction: row; flex-grow: 1; color: white; background-color: rgb(108, 103, 103); padding: 10px; gap: 20px;">
